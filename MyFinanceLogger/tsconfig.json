{
    "compileOnSave": true,
    "compilerOptions": {
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6",
        "module": "es2015",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "outDir": "wwwroot/js"
    },
    "include": [
        "scripts/**/*"
    ]
}
